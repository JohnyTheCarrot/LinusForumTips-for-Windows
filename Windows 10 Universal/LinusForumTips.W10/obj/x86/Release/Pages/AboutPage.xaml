<Page x:ConnectionId='1'
    x:Class="LinusForumTips.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:was_controls="using:AppStudio.Uwp.Controls"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="24,32,24,8">
                <TextBlock x:ConnectionId='2'
                                                             
                    FontWeight="Light"
                    FontSize="26"
                    Style="{StaticResource AppDescriptionsStyle}"/>
                <TextBlock
                    Style="{StaticResource AppDescriptionsStyle}">
                    <Run x:Uid="AppVersion"/>
                    <Run x:ConnectionId='11'                                             />
                </TextBlock>
                <TextBlock x:ConnectionId='3' Style="{StaticResource AppDescriptionsStyle}" Name="changelog"/>
                <Viewbox
                    Margin="0,12,0,0"
                    HorizontalAlignment="Left"
                    StretchDirection="DownOnly">
                    <Border
                        BorderThickness="1"
                        BorderBrush="{StaticResource DescriptionForeground}">
                        <Border.Background>
                            <SolidColorBrush
                                Opacity="0.5"
                                Color="{StaticResource DescriptionForegroundColor}"/>
                        </Border.Background>
                        <Image x:ConnectionId='10'                                            />
                    </Border>
                </Viewbox>
                <TextBlock
                    Margin="0,12,0,0"
                    Style="{StaticResource AppDescriptionsStyle}">
                    <Run x:Uid="DevelopedBy"/>
                    <Run x:ConnectionId='9'                                            />
                </TextBlock>
                <TextBlock x:ConnectionId='4'
                    Margin="0,25,0,0"
                                                               
                    Style="{StaticResource AppDescriptionsStyle}"/>
                <HyperlinkButton x:ConnectionId='5'
                    x:Uid="PrivacyTermsButton"
                                                                    
                    Style="{StaticResource HyperlinkStyle}"/>
                <HyperlinkButton x:ConnectionId='6'                    
                        x:Uid="AboutViewMoreInformation"
                        Style="{StaticResource HyperlinkStyle}"
                                                                                                                                                                             
                                                                                             />
                <StackPanel x:ConnectionId='7'
                                                                                                                                                >
                    <TextBlock
						x:Uid="AboutSectionLicenses"
						Margin="0,25,0,0"
						FontWeight="Bold"
						Style="{StaticResource AppDescriptionsStyle}"/>
                    <HyperlinkButton x:ConnectionId='8'
						Content="Newtonsoft JSON"
						                                                      
						Style="{StaticResource HyperlinkStyle}"/>
                    <TextBlock
						x:Uid="AboutSectionCapabilities"
						Margin="0,25,0,0"
						FontWeight="Bold"
						Style="{StaticResource AppDescriptionsStyle}"/>
                    <TextBlock
						x:Uid="AboutCapabilityInternet"
						Margin="0,12,0,0"
						Style="{StaticResource AppDescriptionsStyle}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>    
</Page>

